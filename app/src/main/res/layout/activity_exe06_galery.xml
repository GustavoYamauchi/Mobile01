<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Exe06GaleryActivity">
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="320dp">
            <ImageView
                    android:src="@drawable/img1"
                    android:layout_height="match_parent" android:id="@+id/img106"
                    android:layout_width="0dp" android:layout_weight="0.5" tools:srcCompat="@drawable/img1"
                    android:scaleType="fitXY"/>
            <ImageView
                    android:src="@drawable/img10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/img206" android:layout_weight="0.5"
                    android:scaleType="fitXY" tools:srcCompat="@drawable/img10"/>
        </LinearLayout>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="320dp">
            <ImageView
                    android:src="@drawable/img11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/img306" android:layout_weight="0.5"
                    android:scaleType="fitXY" tools:srcCompat="@drawable/img11"/>
            <ImageView
                    android:src="@drawable/img4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/img406" android:layout_weight="0.5"
                    android:scaleType="fitXY"/>
        </LinearLayout>
    </TableRow>
</TableLayout>